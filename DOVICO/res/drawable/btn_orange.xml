<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid android:color="#ffbd72"/>
			<stroke android:width="1dip" android:color="#eb8f3e" />
			<corners android:radius="6dip" />
	 	</shape>
	</item>
	<item>
		<shape>
			<gradient android:startColor="#ffc655" android:centerColor="#ffa836" android:endColor="#ff7700" android:angle="270"/>
			<corners android:radius="6dip" />
			<stroke android:width="1dip" android:color="#eb8f3e"/>
	 	</shape>
	</item>
</selector>